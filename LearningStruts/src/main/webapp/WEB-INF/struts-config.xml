<?xml version="1.0" encoding="UTF-8"?>

  <!DOCTYPE struts-config PUBLIC
       "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
       "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="RegisterForm"
			type="com.ritik.actionForms.RegisterForm"></form-bean>
		<form-bean name="LoginForm"
			type="com.ritik.actionForms.LoginForm"></form-bean>
	</form-beans>
	<action-mappings>
		<action path="/register" name="RegisterForm"
			input="/Register.jsp" type="com.ritik.actions.RegisterAction" scope="request">
			<forward name="success" path="/RegisteredSuccessfully.jsp" />
			<forward name="failure" path="/Register.jsp" />
		</action>
		<action path="/login" name="LoginForm" input="/Login.jsp"
			type="com.ritik.actions.LoginAction">
			<forward name="success" path="/Home.jsp"></forward>
			<forward name="failure" path="/Login.jsp"></forward>
		</action>
	</action-mappings>
	<message-resources
		parameter="com.ritik.resource.MessageBundle"></message-resources>

</struts-config>